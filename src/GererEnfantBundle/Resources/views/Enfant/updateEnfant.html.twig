{% extends'base.html.twig' %}
{% block content  %}
    {{ form_start(form) }}
<!-- Main wrapper -->
<div class="wrapper" id="wrapper">
    <!-- Start Bradcaump area -->
    <div class="ht__bradcaump__area">
        <div class="ht__bradcaump__container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bradcaump__inner text-center">
                            <h2 class="bradcaump-title">Inscrire enfant</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Bradcaump area -->
    <!-- Start Contact Form -->

    <h1> Modifier Enfant </h1>
    <section class="contact__box section-padding--lg bg-image--27">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-md-12">
                    <div class="section__title text-center">
                        <h2 class="title__line">Modifier votre enfant</h2>
                    </div>
                </div>
            </div>
            <div class="row mt--80">
                <div class="col-lg-12">
                    <div class="contact-form-wrap">

                        <div class="single-contact-form name">Nom:</p>
                            {{ form_widget(form.nom) }}
                        </div>
                        <div class="single-contact-form name"><p>Prenom:</p>
                            {{ form_widget(form.prenom) }}
                        </div>
                        <div class="single-contact-form subject">Date de naissance:</p>
                            {{ form_widget(form.dateNaissance) }}
                        </div>
                        <div class="single-contact-form subject">Date de naissance:</p>
                            {{ form_widget(form.ajouter) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Form -->
</div>
{{ form_end(form) }}
{% endblock %}
